<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenfeltbg"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".FirstActivity" >

    <ImageView
        android:id="@+id/imageView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="23dp"
        android:layout_marginTop="63dp"
        android:onClick="firstColumnSelected"
        android:src="@drawable/c1" />

    <ImageView
        android:id="@+id/imageView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_alignTop="@+id/imageView11"
        android:layout_marginTop="32dp"
        android:onClick="firstColumnSelected"
        android:src="@drawable/c2" />

    <ImageView
        android:id="@+id/imageView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_alignTop="@+id/imageView21"
        android:layout_marginTop="32dp"
        android:onClick="firstColumnSelected"
        android:src="@drawable/c3" />

    <ImageView
        android:id="@+id/imageView41"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView11"
        android:layout_below="@+id/imageView11"
        android:onClick="firstColumnSelected"
        android:src="@drawable/c4" />

    <ImageView
        android:id="@+id/imageView51"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView21"
        android:layout_below="@+id/imageView21"
        android:onClick="firstColumnSelected"
        android:src="@drawable/c5" />

    <ImageView
        android:id="@+id/imageView61"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView41"
        android:layout_below="@+id/imageView31"
        android:onClick="firstColumnSelected"
        android:src="@drawable/c6" />

    <ImageView
        android:id="@+id/imageView71"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView51"
        android:layout_below="@+id/imageView41"
        android:onClick="firstColumnSelected"
        android:src="@drawable/c7" />

    <ImageView
        android:id="@+id/imageView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView11"
        android:layout_centerHorizontal="true"
        android:onClick="secondColumnSelected"
        android:src="@drawable/c1" />

    <ImageView
        android:id="@+id/imageView22"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView12"
        android:layout_alignTop="@+id/imageView21"
        android:onClick="secondColumnSelected"
        android:src="@drawable/c2" />

    <ImageView
        android:id="@+id/imageView32"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/imageView31"
        android:layout_centerHorizontal="true"
        android:onClick="secondColumnSelected"
        android:src="@drawable/c3" />

    <ImageView
        android:id="@+id/imageView42"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageView71"
        android:layout_alignLeft="@+id/imageView22"
        android:onClick="secondColumnSelected"
        android:src="@drawable/c4" />

    <ImageView
        android:id="@+id/imageView52"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView32"
        android:layout_alignTop="@+id/imageView51"
        android:onClick="secondColumnSelected"
        android:src="@drawable/c5" />

    <ImageView
        android:id="@+id/imageView62"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView42"
        android:layout_alignTop="@+id/imageView61"
        android:onClick="secondColumnSelected"
        android:src="@drawable/c6" />

    <ImageView
        android:id="@+id/imageView72"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView52"
        android:layout_alignTop="@+id/imageView71"
        android:onClick="secondColumnSelected"
        android:src="@drawable/c7" />

    <ImageView
        android:id="@+id/imageView13"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/imageView12"
        android:onClick="thirdColumnSelected"
        android:src="@drawable/c1" />

    <ImageView
        android:id="@+id/imageView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView33"
        android:layout_alignTop="@+id/imageView22"
        android:onClick="thirdColumnSelected"
        android:src="@drawable/c2" />

    <ImageView
        android:id="@+id/imageView33"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_alignTop="@+id/imageView32"
        android:onClick="thirdColumnSelected"
        android:src="@drawable/c3" />

    <ImageView
        android:id="@+id/imageView43"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView13"
        android:layout_below="@+id/imageView13"
        android:onClick="thirdColumnSelected"
        android:src="@drawable/c4" />

    <ImageView
        android:id="@+id/imageView53"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView23"
        android:layout_below="@+id/imageView23"
        android:onClick="thirdColumnSelected"
        android:src="@drawable/c5" />

    <ImageView
        android:id="@+id/imageView63"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView33"
        android:layout_below="@+id/imageView33"
        android:onClick="thirdColumnSelected"
        android:src="@drawable/c6" />

    <ImageView
        android:id="@+id/imageView73"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageView53"
        android:layout_alignTop="@+id/imageView72"
        android:onClick="thirdColumnSelected"
        android:src="@drawable/c7" />

    <TextView
        android:id="@+id/txtTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/txtBottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:text="Large Text"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
